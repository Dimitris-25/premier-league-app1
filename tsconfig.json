{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,

    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* ΣΗΜΑΝΤΙΚΟ: για vite.config.ts και λοιπά Node αρχεία */
    "types": ["vite/client", "node"]
  },
  "include": [
    "src",
    "vite.config.ts"
  ]
}
